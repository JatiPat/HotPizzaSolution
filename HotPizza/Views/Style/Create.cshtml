@model HotPizza.Models.Style

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Pizza Style</h1>
<hr />
<div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group pb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input type="text" asp-for="DisplayOrder" class="form-control" />
              @*   Added type=text to get rid of up/down arrows *@
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group pb-2 col-6">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-6">
                    <a asp-controller="Style" asp-action="Index" class="btn btn-primary form-control">Back to Pizza Style List</a>
                </div>
            </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
