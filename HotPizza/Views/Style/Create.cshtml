@model HotPizza.Models.Style

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Pizza Style</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-2">
                <label asp-for="Name" class="control-label">Pizza Style</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="DisplayOrder" class="control-label">Display Order</label>
                <input type="text" asp-for="DisplayOrder" class="form-control" />
              @*   Added type=text to get rid of up/down arrows *@
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Style" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
