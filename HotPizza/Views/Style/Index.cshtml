@model List<Style> 

<div class="cotainer">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Pizza Styles</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Style" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Add Another Pizza Style!
            </a>
        </div>
    </div>
</div>




<table class="table">
    <thead>
        <tr>
        <th>Order Number</th>
        <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(i => i.DisplayOrder)){
        <tr>
            
            <td>@item.DisplayOrder</td>
                <td> @item.Name</td>
        </tr>
        }
    </tbody>
</table>